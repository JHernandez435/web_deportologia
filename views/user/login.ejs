<%- include('../partials/homeheader') -%>

<main class="flex justify-center items-center pt-40 pb-16 bg-login bg-center bg-cover">
    <section class="relative flex flex-col items-center w-1/3  pt-16 pb-10 px-8 bg-[#ffffffb3]">
        <header class="w-full mb-10">
            <div class="flex">
                <div class="inline-block basis-3/4">
                    <p class="font-normal text-xl">Bienvenido</p>
                    <h1 class="font-medium text-5xl">Iniciar sesión</h1>
                </div>

                <a class="basis-1/4 text-[#8d8d8d]" href="/signup">¿Sin cuenta? <span
                        class="text-black">Registrarse.</span></a>
            </div>
        </header>

        <!-- Inicio de sesión con terceros -->
        <div class="w-full flex space-x-2 mb-10">
            <a class="flex justify-center items-center grow py-4 px-6 bg-[#E9F1FF] rounded-xl" href="#"><span
                    class="inline-block w-8 h-8 mr-4 bg-google"></span>Inicia sesión
                con Google</a>

            <a class="flex items-center p-4 bg-white rounded-xl" href="#"><span
                    class="inline-block w-8 h-8 bg-facebookTwo"></span></a>

            <a class="flex items-center p-4 bg-white rounded-xl" href="#"><span
                    class="inline-block w-8 h-8 bg-apple"></span></a>
        </div>
        <%- include('../partials/messages') -%>
            <form action="/login" method="POST">
                <!-- Username -->
                <div class="mb-8">
                    <label for="username">Ingrese su dirección de correo electrónico</label>
                    <input type="email" name="email"
                        class="w-full mt-3 py-4 px-6 rounded-lg outline outline-1 outline-[#ADADAD] focus:outline-2 focus:outline-[#4285F4]"
                        id="email" placeholder="Enter username" />
                </div>

                <!-- Password -->
                <div class="mb-4">
                    <label for="password">Ingrese su contraseña</label>
                    <input type="password" name="password"
                        class="w-full mt-3 py-4 px-6 rounded-lg outline outline-1 outline-[#ADADAD] focus:outline-2 focus:outline-[#4285F4]"
                        id="password" placeholder="Enter password" />
                </div>

                <div class="flex flex-col items-end space-y-8">
                    <a href="#" class="text-[#4285F4]">¿Olvidó su contraseña?</a>

                    <button type="submit" class="w-1/2 py-3 px-6 bg-black text-white text-center rounded-xl">
                        Iniciar sesion
                    </button>
                </div>
            </form>
    </section>
</main>
</div>

<%- include('../partials/homefooter') -%>